apiVersion: apps/v1
kind: Deployment
metadata:
  name: cpp-app-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cpp-app
  template:
    metadata:
      labels:
        app: cpp-app
    spec:
      containers:
      - name: cpp-app-container
        image: <your-dockerhub-username>/cpp-app:latest  # Replace with your Docker Hub image
        ports:
        - containerPort: 8080



apiVersion: v1
kind: Service
metadata:
  name: cpp-app-service
spec:
  type: NodePort  # This will expose your service on a port on your local machine
  selector:
    app: cpp-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
      nodePort: 30007  # Kubernetes will expose your service on this port


# Step 2: Deploy to Kubernetes
- script: |
    kubectl apply -f k8s/deployment.yaml
    kubectl apply -f k8s/service.yaml
  displayName: 'Deploy to Kubernetes'
